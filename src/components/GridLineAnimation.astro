<section class="grid-wrapper">
  {Array.from({ length: 749 }).map((_, i) => <span />)}
</section>

<style>
  .grid-wrapper {
    position: absolute;
    z-index: -1;
    left: -10%;
    width: 120%;
    height: 100vh;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 1px;
    overflow: hidden;
    background: linear-gradient(
      to bottom,
      rgba(29, 29, 29, 0.3),
      rgba(0, 0, 0, 0.2)
    );
  }
  .grid-wrapper:before {
    content: "";
    position: absolute;
    top: -30%;
    width: 100%;
    height: 150%;
    background: radial-gradient(circle, rgb(46, 46, 46) 0, transparent 50%);
    animation: animate 6s linear infinite;
  }

  @keyframes animate {
    0% {
      transform: translate(-100%, 50%);
    }

    to {
      transform: translate(100%, -100%);
    }
  }

  @keyframes animateas {
    0% {
      transform: translate(-100%);
    }

    50% {
      transform: translateY(-50%);
    }

    to {
      transform: translateY(100%);
    }
  }

  .grid-wrapper span {
    position: relative;
    display: block;
    width: 60px;
    height: 60px;
    background: #000000;
    transition: 0.5s;
    z-index: 2;
  }

  @media (max-width: 768px) {
    .grid-wrapper span {
      width: 60px;
      height: 60px;
    }
  }

  @media (max-width: 480px) {
    .grid-wrapper span {
      width: 30px;
      height: 30px;
    }
  }
</style>
